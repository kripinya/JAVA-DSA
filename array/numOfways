class Solution {
    public int numOfWays(int n) {
        long mod = 1_000_000_007;

        long aba = 6; // type ABA
        long abc = 6; // type ABC

        for (int i = 2; i <= n; i++) {
            long newAba = (aba * 3 + abc * 2) % mod;
            long newAbc = (aba * 2 + abc * 2) % mod;

            aba = newAba;
            abc = newAbc;
        }

        return (int)((aba + abc) % mod);
    }
}
